{% extends 'base.html.twig' %}

{% block title %}Lecon index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col">
                <h1>Lecon index</h1>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for lecon in lecons %}
                        <tr>
                            <td>{{ lecon.id }}</td>
                            <td>{{ lecon.nom }}</td>
                            <td>{{ lecon.description }}</td>
                            <td>
                                <a class="btn btn-primary" href="{{ path('app_lecon_show', {'id': lecon.id}) }}">Show</a>
                                <a class="btn btn-warning" href="{{ path('app_lecon_edit', {'id': lecon.id}) }}">Edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">No records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                <a class="btn btn-primary" href="{{ path('app_lecon_new') }}">Create New</a>
            </div>
        </div>
    </div>
{% endblock %}

