{% extends 'base.html.twig' %}

{% block title %}Lecon index{% endblock %}

{% block body %}
    <h1>Lecon index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lecon in lecons %}
            <tr>
                <td>{{ lecon.id }}</td>
                <td>{{ lecon.nom }}</td>
                <td>{{ lecon.description }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_lecon_show', {'id': lecon.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('app_lecon_edit', {'id': lecon.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_lecon_new') }}">Create new</a>
{% endblock %}
