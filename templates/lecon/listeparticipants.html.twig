{% extends 'base.html.twig' %}

{% block title %}Leçon Inscription{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col">
                <h1>Liste Participants</h1>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <ul class="list-group">
                    {% for participant in participants %}
                        <li class="list-group-item">{{ participant.nom }} {{ participant.prenom }}</li>
                    {% else %}
                        <li class="list-group-item">Aucun participant à la Leçon</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
